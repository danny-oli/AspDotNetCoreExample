<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="m-5">

        @* Barra de Navegação *@
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">

            <a class="navbar-brand" href="#">JornalOnline Ecoville</a>

        </nav>

        @* Conteúdo *@
        @RenderBody()
    </div>


    @* Rodapé *@
    <footer style="position:fixed; bottom:50px; width:100vw">
        <p style="text-align:center">
            &copy; @DateTime.Now.Year - Desenvolvido por Danny 
        </p>

        <div class="progress">
            <div class="progress-bar progress-bar-striped bg-success progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 100%"></div>
        </div>

    </footer>

</body>
</html>
