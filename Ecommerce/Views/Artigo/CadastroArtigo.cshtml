
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    @model Artigo
    
}

<h2>Cadastro Artigo</h2>

<form asp-action="CadastrarArtigo" asp-controller="Artigo"  method="post">

    <fieldset>
        <div class="form-group" id="Tipo">
            <label asp-for="Paginas"></label>
            <input type="text" asp-for="Paginas"
                   class="form-control" />
        </div>
        <div class="form-group" id="Tipo">
            <label asp-for="Titulo"></label>
            <input type="text" asp-for="Titulo"
                   class="form-control" />
        </div>
        <div class="form-group" id="Tipo">
            <label asp-for="Texto"></label>
            <input asp-for="Texto" type="text" class="form-control" />
        </div>
        <div class="form-group" id="Tema">
            <label asp-for="Tema"></label>
            <input type="text" asp-for="Tema"
                   class="form-control" />
        </div>
        <div class="form-group" id="ColunistaAutor">
            <label asp-for="ColunistaAutor"></label>
            <input value="@ViewBag.ColunistaID" asp-for="ColunistaAutor"
                   class="form-control" />
        </div>



        <input type="submit" value="Cadastrar Artigo" class="btn btn-secondary" />

    </fieldset>
</form>
