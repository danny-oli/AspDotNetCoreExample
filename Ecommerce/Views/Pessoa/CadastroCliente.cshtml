
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    @model Cliente
}


<form method="post">
    <fieldset>
        <legend>Seus Dados</legend>
        <div asp-validation-summary="ModelOnly"
             class="text-primary"></div>

        <div class="form-group" id="Nome">
            <label asp-for="Nome"></label>
            <input type="text" asp-for="Nome"
                   class="form-control" />
        </div>
        <div class="form-group" id="Cpf">
            <label asp-for="CPf"></label>
            <input type="text" asp-for="CPf"
                   class="form-control" />
        </div>
        <div class="form-group" id="Cep">
            <label asp-for="Cep"></label>
            <input type="text" asp-for="Cep"
                   class="form-control" />
        </div>
        <div class="form-group" id="Senha">
            <label asp-for="Password"></label>
            <input type="text" asp-for="Password"
                   class="form-control" />
        </div>
        <input type="submit" class="btn btn-success"
               value="Cadastrar" asp-action="CadastrarCliente"
               asp-controller="Pessoa" />
    </fieldset>
</form>

